---
import { getProject } from '../utils/project';

const base = import.meta.env.BASE_URL;
const project = getProject();
---
<header class="border-b border-void bg-paper px-6 py-4 flex justify-between items-center sticky top-0 z-50">
  <div class="flex items-center gap-4">
    <a href={base} class="text-xl font-black tracking-tight text-void uppercase flex items-center gap-2">
      <span class="text-rand-blue">TheFocus.AI</span> Labs
    </a>
  </div>

  <div class="flex items-center gap-6">
    <div class="text-right hidden md:block font-mono text-xs">
      <div class="font-bold text-void">DOC. NO: {project.docNumber}</div>
      <div class="text-void/60">{project.title}</div>
    </div>

    <a href="https://thefocus.ai" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 font-mono text-xs font-bold uppercase tracking-widest text-rand-blue hover:underline decoration-2 underline-offset-4">
      TheFocus.ai
    </a>
  </div>
</header>
