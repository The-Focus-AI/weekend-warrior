---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getSteps } from '../utils/steps';
import { getProject } from '../utils/project';
import { getEntry } from 'astro:content';
import { marked } from 'marked';

const base = import.meta.env.BASE_URL;
const project = getProject();
const steps = await getSteps();
const lastStep = steps[steps.length - 1];

// Get epilog content
const epilog = await getEntry('docs', 'epilog');
if (!epilog) {
    return Astro.redirect(base);
}

const epilogHtml = marked.parse(epilog.body);
---

<Layout title={`Continue Your Journey | ${project.title} | TheFocus.AI Labs`}>
  <Header slot="header" />
  <div class="grid grid-cols-1 lg:grid-cols-12 h-full overflow-hidden bg-paper">
    {/* Left Panel: Epilog Content */}
    <div class="col-span-1 lg:col-span-7 overflow-y-auto flex flex-col bg-paper border-r border-void z-10 relative">
      <div class="p-8 lg:p-12 flex-1 max-w-3xl mx-auto w-full">
        <div class="mb-12 pb-6 border-b border-void flex justify-between items-start">
            <div>
                <span class="block text-xs font-mono font-bold text-alert-red mb-2">EPILOG</span>
                <h1 class="text-3xl font-black text-void uppercase tracking-tight leading-tight">Continue Your Journey</h1>
            </div>
        </div>

        <div class="prose prose-void prose-lg" set:html={epilogHtml} />
      </div>

      {/* Navigation Footer */}
      <div class="sticky bottom-0 bg-paper border-t border-void p-6 flex justify-between items-center z-10">
        <a href={`${base}steps/${lastStep.slug}`} class="font-mono font-bold text-xs text-void uppercase tracking-widest hover:text-rand-blue transition-colors flex items-center gap-2">
            &larr; PREV
        </a>

        <a href={base} class="font-mono font-bold text-xs text-void uppercase tracking-widest hover:text-rand-blue transition-colors flex items-center gap-2">
            INDEX &rarr;
        </a>
      </div>
    </div>

    {/* Right Panel: Summary/Call to Action */}
    <div class="col-span-1 lg:col-span-5 h-full overflow-y-auto bg-surface p-8 lg:p-12 flex flex-col">
      <div class="max-w-xl mx-auto w-full">
        <div class="border-b-2 border-void pb-6 mb-8">
            <h2 class="text-2xl font-black text-void uppercase tracking-tight">Mission Complete</h2>
        </div>

        <div class="space-y-6">
            <div class="bg-paper border border-void p-6">
                <span class="block text-xs font-mono font-bold text-alert-red mb-2">STATUS</span>
                <p class="font-bold text-void uppercase">All {steps.length} operations completed</p>
            </div>

            <div class="bg-paper border border-void p-6">
                <span class="block text-xs font-mono font-bold text-alert-red mb-2">PROJECT</span>
                <p class="font-bold text-void">{project.title}</p>
                <p class="font-mono text-xs text-void/60 mt-2">DOC. NO: {project.docNumber}</p>
            </div>

            {project.repoUrl && (
                <a href={project.repoUrl} target="_blank" rel="noopener noreferrer" class="block w-full bg-rand-blue text-white font-mono font-bold text-center py-4 uppercase tracking-widest hover:bg-opacity-90 transition-opacity">
                    View Repository &rarr;
                </a>
            )}

            <!-- Newsletter Signup -->
            <div class="bg-void text-white p-6 mt-6">
                <span class="block text-xs font-mono font-bold text-rand-blue mb-2">STAY UPDATED</span>
                <p class="font-bold text-white uppercase mb-4">Get More Weekend Projects</p>
                <form
                    action="https://buttondown.com/api/emails/embed-subscribe/thefocusai"
                    method="post"
                    class="space-y-3"
                >
                    <input
                        type="email"
                        name="email"
                        placeholder="your@email.com"
                        required
                        class="w-full px-4 py-3 bg-white text-void font-mono text-sm border-2 border-white focus:border-rand-blue focus:outline-none"
                    />
                    <button
                        type="submit"
                        class="w-full px-6 py-3 bg-rand-blue text-white font-mono font-bold text-sm uppercase tracking-wider border-2 border-rand-blue hover:bg-white hover:text-rand-blue transition-colors"
                    >
                        Subscribe
                    </button>
                </form>
                <p class="font-mono text-[10px] text-gray-400 mt-3">No spam. Unsubscribe anytime.</p>
            </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
